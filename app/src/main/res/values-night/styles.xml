<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IncreaseButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:text">@string/plus</item>
        <item name="android:background">@drawable/btn_increase_drawable_night</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="DecreaseButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:text">@string/minus</item>
        <item name="android:background">@drawable/btn_decrease_drawable</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="LifeCount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="player_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/player_section_shape_night</item>
    </style>
</resources>